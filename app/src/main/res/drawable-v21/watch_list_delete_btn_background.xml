<?xml version="1.0" encoding="utf-8"?><!--    To make a borderless ripple effect-->
<!--    references on-->
<!--    https://stackoverflow.com/questions/35436809/how-to-make-custom-ripple-borderless-->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/superLightGrey">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <solid android:color="@color/half_transparent" />
            <corners android:radius="8dp" />
        </shape>
    </item>

</ripple>